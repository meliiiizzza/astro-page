---
import BaseLayout from '../../layouts/BaseLayout.astro';
const allPosts = await Astro.glob('../posts/*.md'); //nos da todos los archivos q contienen archivos md 
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];//returns list of tags
const pageTitle = "Tags";
---
<BaseLayout pageTitle={pageTitle}>
    <h2>{pageTitle}</h2>
    <div class="tags">
       {tags.map((tag) => 
            <p class="tags"><a href={`/tags/${tag}`}>{tag}</a></p>
       )}
    </div>
</BaseLayout>